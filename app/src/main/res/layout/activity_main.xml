<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/colorBackground">

    <TextView
        android:layout_marginTop="35dp"
        android:id="@+id/record_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textSize="50sp"
        android:textColor="@color/textWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap the microphone to start recording"
        android:id="@+id/record_state_text"
        android:textColor="@color/textWhite"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@+id/record_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="File name"
        android:textColor="@color/textWhite"
        android:gravity="center"
        android:textSize = "8dp"
        app:layout_constraintTop_toBottomOf="@+id/record_state_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/filename"/>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:weightSum="100"
        android:id="@+id/stop_icon_house"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/record_icon_house"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/stop_recording"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_stop_black_24dp"
            android:background="@color/colorPrimaryDark"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/record_icon_house"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/record_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:src="@drawable/ic_mic_black_24dp"
            android:background="@color/colorPrimaryDark"/>
        <ImageButton
            android:id="@+id/playlist_btn"
            android:src="@drawable/ic_playlist_play_black_24dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent"
            android:layout_weight="50"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>